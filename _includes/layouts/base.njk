<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if title %}{{ title }} | {% endif %}My Blog</title>
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->
</head>
<body>

<header>
    <h1>My Blog</h1>
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/about.html">About</a></li>
            <li><a href="/contact.html">Contact</a></li>
        </ul>
    </nav>
</header>

<main>
    <article>
        {{ content | safe }} 
    </article>
</main>

<footer>
    
</footer>

<script>
    // Initialize Netlify Identity
    if (window.NetlifyIdentity) {
        window.NetlifyIdentity.init(); // Initialize the identity widget

        window.NetlifyIdentity.on('init', user => {
            if (!user) {
                // If no user is logged in, set up login listener
                window.NetlifyIdentity.on('login', () => {
                    document.location.href = "/admin"; // Redirect to admin page after login
                });
            }
        });
    }
</script>

</body>
</html>
